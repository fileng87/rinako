{
  "name": "rinako",
  "module": "./dist/index.js",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run ./dist/index.js",
    "dev": "bun --watch run ./src/index.ts",
    "build": "bun build ./src/index.ts --outdir dist --target bun",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ],
    "*.{ts,tsx,js,jsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.45.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "discord.js": "^14.22.1",
    "drizzle-orm": "^0.44.5",
    "winston": "^3.18.3",
    "winston-console-format": "^1.0.8",
    "zod": "^4.1.11"
  }
}
